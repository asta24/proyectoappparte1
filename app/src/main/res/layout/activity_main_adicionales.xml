<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBB0DA"
    tools:context=".MainActivity_Adicionales">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="345dp"
        android:layout_height="600dp"
        android:layout_margin="8dp"
        android:layout_marginStart="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/image_espalda"
                android:layout_width="match_parent"
                android:layout_height="435dp"
                android:contentDescription="@string/image_espalda"
                android:onClick="Navegarespalda"
                app:srcCompat="@drawable/image_espalda" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EJERCICIO ESPALDA"
                android:textAlignment="center"
                android:textColor="#004b77"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/image_pecho"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:contentDescription="@string/image_pecho"
                android:onClick="Navegarpecho"
                android:textAlignment="center"
                app:srcCompat="@drawable/image_pecho" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EJERCICIO PECHO"
                android:textAlignment="center"
                android:textColor="#004b77"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/image_brazos"
                android:layout_width="wrap_content"
                android:layout_height="504dp"
                android:contentDescription="@string/image_brazos"
                android:onClick="Navegarbrazo"
                app:srcCompat="@drawable/image_brazos" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EJERCICIO BRAZOS"
                android:textAlignment="center"
                android:textColor="#004b77"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/image_hombros"
                android:layout_width="match_parent"
                android:layout_height="455dp"
                android:contentDescription="@string/image_hombros"
                android:onClick="Navegarhombros"
                app:srcCompat="@drawable/image_hombros" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EJERCICIO HOMBROS"
                android:textAlignment="center"
                android:textColor="#004b77"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/image_piernas"
                android:layout_width="match_parent"
                android:layout_height="502dp"
                android:contentDescription="@string/image_piernas"
                android:onClick="Navegarpiernas"
                app:srcCompat="@drawable/image_piernas" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EJERCICIO PIERNAS"
                android:textAlignment="center"
                android:textColor="#004b77"
                android:textSize="20sp"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>