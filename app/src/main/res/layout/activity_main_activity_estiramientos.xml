<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_Estiramientos">

    <ScrollView
        android:layout_width="382dp"
        android:layout_height="694dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/estiramiento_espalda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="Estiramientosespalda"
                app:srcCompat="@drawable/estiramiento_espalda" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:onClick="Estiramientosespalda"
                android:text="ESTIRAMIENTOS ESPALDA"
                android:textAlignment="center"
                android:textSize="20sp"
                android:background="@drawable/edittext_borde_redondeado"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/estiramiento_piernas"
                android:layout_width="399dp"
                android:layout_height="291dp"
                android:onClick="Estiramientospiernas"
                app:srcCompat="@drawable/estiramiento_piernas" />

            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:onClick="Estiramientospiernas"
                android:text="ESTIRAMIENTOS PIERNAS"
                android:textAlignment="center"
                android:textSize="20sp"
                android:background="@drawable/edittext_borde_redondeado"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/estiramiento_brazos"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:onClick="Estiramientosbrazos"
                app:srcCompat="@drawable/estiramiento_brazos" />

            <EditText
                android:id="@+id/editTextTextPersonName3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:onClick="Estiramientosbrazos"
                android:text="ESTIRAMIENTOS BRAZOS"
                android:textAlignment="center"
                android:textSize="20sp"
                android:background="@drawable/edittext_borde_redondeado"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/estiramiento_hombros"
                android:layout_width="match_parent"
                android:layout_height="469dp"
                android:onClick="Estiramientoshombros"
                app:srcCompat="@drawable/estiramiento_hombros" />

            <EditText
                android:id="@+id/editTextTextPersonName4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:onClick="Estiramientoshombros"
                android:text="ESTIRAMIENTOS HOMBROS"
                android:textAlignment="center"
                android:textSize="20sp"
                android:background="@drawable/edittext_borde_redondeado"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/estiramiento_pecho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="Estiramientospecho"
                app:srcCompat="@drawable/estiramiento_pecho" />

            <EditText
                android:id="@+id/editTextTextPersonName5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:onClick="Estiramientospecho"
                android:text="ESTIRAMIENTOS PECHO"
                android:textAlignment="center"
                android:textSize="20sp"
                android:background="@drawable/edittext_borde_redondeado"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>