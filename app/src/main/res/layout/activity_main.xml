<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBB0DA"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_usuario"
        android:layout_width="277dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_borde_redondeado"
        android:ems="10"
        android:hint="@string/et_usuario"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tx_avatar"
        android:layout_width="346dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/textview_borde_redondeado"
        android:text="Seleccione su avatar "
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_usuario" />

    <LinearLayout
        android:layout_width="215dp"
        android:layout_height="498dp"
        android:layout_marginTop="44dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tx_avatar">

        <ImageButton
            android:id="@+id/iv_avatar1"
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:backgroundTint="#00FFFFFF"
            android:onClick="usuario1"
            app:srcCompat="@drawable/av1" />

        <ImageButton
            android:id="@+id/iv_avatar3"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#00FFFFFF"
            android:onClick="usuario3"
            app:srcCompat="@drawable/av3" />

        <ImageButton
            android:id="@+id/iv_avatar5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:onClick="usuario5"
            app:srcCompat="@drawable/av5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="206dp"
        android:layout_height="497dp"
        android:layout_marginTop="37dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tx_avatar">

        <ImageButton
            android:id="@+id/iv_avatar2"
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:layout_margin="1dp"
            android:backgroundTint="#00FFFFFF"
            android:onClick="usuario2"
            app:srcCompat="@drawable/av2" />

        <ImageButton
            android:id="@+id/iv_avatar4"
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="17dp"
            android:backgroundTint="#00FFFFFF"
            android:onClick="usuario4"
            app:srcCompat="@drawable/av4" />

        <ImageButton
            android:id="@+id/iv_avatar6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#00FFFFFF"
            android:onClick="usuario6"
            app:srcCompat="@drawable/av6" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>