<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBB0DA"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_usuario"
        android:layout_width="277dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_borde_redondeado"
        android:ems="10"
        android:hint="@string/et_usuario"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="152dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_avatar">

        <ImageButton
            android:id="@+id/btn_avatar1"
            android:layout_width="367dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:width="1dp"
            android:color="#21094A"
            android:onClick="usuario1"
            app:srcCompat="@drawable/av1" />

        <ImageButton
            android:id="@+id/btn_avatar2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="usuario2"
            app:srcCompat="@drawable/av2" />

        <ImageButton
            android:id="@+id/btn_avatar5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="usuario5"
            app:srcCompat="@drawable/av5" />

        <ImageButton
            android:id="@+id/btn_avatar6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="usuario6"
            app:srcCompat="@drawable/av6" />

        <ImageButton
            android:id="@+id/btn_avatar4"
            android:layout_width="401dp"
            android:layout_height="189dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="usuario4"
            app:srcCompat="@drawable/av4" />

        <ImageButton
            android:id="@+id/btn_avatar3"
            android:layout_width="436dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="usuario3"
            app:srcCompat="@drawable/av3" />

    </LinearLayout>

    <TextView
        android:id="@+id/tx_avatar"
        android:layout_width="346dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/textview_borde_redondeado"
        android:text="Seleccione su avatar "
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_usuario" />

</androidx.constraintlayout.widget.ConstraintLayout>